@model IEnumerable<MedicalHistory.History>
@{
    ViewBag.Title = "Details";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url("/Content/Images/home.jpg");
            background-repeat: no-repeat;
            background-size: 1535px 900px;
            color:white
        }

        #heading {
            background-color: black;
            padding: 10px;
            opacity: 0.7;
            margin: 20px;
        }

        .table {
            background-color: black;
            padding: 20px;
            opacity: 0.7;
        }
        h4{
            background-color:black;
            opacity:0.7;
            padding:5px;
        }
    </style>
</head>
<body>
    <h2 id="heading">Medical History</h2>
    <h4>@Html.ActionLink("Create New", "Create")</h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Disease)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hospital)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Disease)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hospital)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { historyid = item.HistoryId }) |
                    @Html.ActionLink("Documents", "Details", "Documents", new { historyid = item.HistoryId }, null) |
                    @Html.ActionLink("Delete", "Delete", new { historyid = item.HistoryId })
                </td>
            </tr>
         }

    </table>
    </body>
</html>
