@model MedicalHistory.Document

@{
    ViewBag.Title = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        #heading {
            background-color: black;
            padding: 5px;
            opacity: 0.7;
            margin: 20px;
            color: white
        }

        #content {
            background-color: black;
            opacity: 0.7;
            padding: 10px;
            margin: 20px;
        }

        body {
            background-image: url("/Content/Images/home.jpg");
            background-repeat: no-repeat;
            background-size: 1535px 900px;
            color:white
        }
    </style>
</head>
<body>
    <h2 id="heading">Delete Document</h2>
    <div id="content">
        <h4>Are you sure you want to delete this?</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Path)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Path)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.History.Disease)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.History.Disease)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Patient.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Patient.Name)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Details",new { historyid = Session["hid"] })
            </div>
        }
    </div>
</body>
</html>
